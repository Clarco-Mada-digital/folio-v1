---
import ThemeToggle from '../components/ThemeToggle.astro';
---

<!doctype html>
<html lang="fr" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Portfolio - Bryan Clark</title>
	</head>
	<body class="bg-white text-gray-900 dark:bg-gray-900 dark:text-gray-100 transition-colors duration-200">
		<header class="fixed top-0 left-0 right-0 z-50 bg-white/80 dark:bg-gray-900/80 backdrop-blur-sm border-b border-gray-200 dark:border-gray-800">
			<div class="container mx-auto px-4 py-4 flex justify-between items-center">
				<a href="/" class="text-xl font-bold text-blue-600 dark:text-blue-400">Bryan Clark</a>
				<nav class="flex items-center space-x-4">
					<a href="#about" class="hover:text-blue-600 dark:hover:text-blue-400 transition-colors">À propos</a>
					<a href="#projects" class="hover:text-blue-600 dark:hover:text-blue-400 transition-colors">Projets</a>
					<a href="#contact" class="hover:text-blue-600 dark:hover:text-blue-400 transition-colors">Contact</a>
					<ThemeToggle />
				</nav>
			</div>
		</header>

		<main class="pt-20">
			<slot />
		</main>

		<footer class="bg-gray-100 dark:bg-gray-800 py-8 mt-16">
			<div class="container mx-auto px-4 text-center">
				<p>© {new Date().getFullYear()} Bryan Clark. Tous droits réservés.</p>
			</div>
		</footer>
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		min-height: 100%;
	}

	/* Style pour les transitions de thème */
	* {
		transition: background-color 0.3s ease, border-color 0.3s ease;
	}
</style>
