---
// src/components/Projects.astro
const { id } = Astro.props;

const projects = [
  {
    id: 1,
    title: "Application E-commerce",
    description: "Plateforme e-commerce complète avec panier, paiement et tableau de bord administrateur.",
    image: "/images/projects/ecommerce.png",
    tags: ["React", "Node.js", "MongoDB", "Stripe"],
    github: "https://github.com/clarco-mada-digital/ecommerce",
    demo: "https://renalanatural.com"
  },
  {
    id: 2,
    title: "Réseau Social",
    description: "Réseau social avec authentification, publications, commentaires et messagerie en temps réel.",
    image: "/images/projects/social-network.png",
    tags: ["Next.js", "GraphQL", "PostgreSQL", "WebSocket"],
    github: "https://github.com/clarco-mada-digital/social-network",
    demo: "https://social-network-demo.com"
  },
  {
    id: 3,
    title: "Application Météo",
    description: "Application météo en temps réel avec prévisions sur 7 jours et géolocalisation.",
    image: "/images/projects/weather-app.jpg",
    tags: ["Vuejs", "OpenWeather API", "Geolocation API"],
    github: "https://github.com/clarco-mada-digital/weather-app",
    demo: "https://weather-demo.com"
  },
  {
    id: 4,
    title: "Application Gestion des membres",
    description: "Application de gestion des membres avec authentification, publications, commentaires et messagerie en temps réel.",
    image: "/images/projects/projet_AF.png",
    tags: ["Laravel", "PMB API", "MySQL"],
    github: "https://github.com/clarco-mada-digital/projet_AF",
    demo: "https://preprod.af.mada-digital.net"
  },
  {
    id: 5,
    title: "Application Creation de prompt AI",
    description: "Application de creation de prompt AI",
    image: "/images/projects/projet_ai.png",
    tags: ["Html", "CSS", "JS", "OpenAI API"],
    github: "https://github.com/clarco-mada-digital/projet_prompt_ai",
    demo: "https://projet_prompt_ai.mada-digital.net"
  }
];
---

<section id={id} class="py-20 bg-white dark:bg-gray-900">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl font-bold text-center mb-4 text-gray-900 dark:text-white">Mes Projets</h2>
    <p class="text-center text-gray-600 dark:text-gray-300 mb-12 max-w-2xl mx-auto">
      Découvrez une sélection de mes projets récents et des technologies que j'utilise.
    </p>
    
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      {projects.map(project => (
        <a 
          href={`/projects/${project.id}`}
          class="group block p-4 overflow-hidden rounded-xl bg-white dark:bg-gray-800 shadow-lg hover:shadow-xl transition-shadow duration-300"
        >
          <div class="h-48 overflow-hidden">
            <img 
              src={project.image} 
              alt={project.title}
              class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-500"
              width="400"
              height="225"
            />
          </div>
          
          <div class="p-6">
            <h3 class="text-xl font-bold mb-2 text-gray-900 dark:text-white group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors">
              {project.title}
            </h3>
            
            <p class="text-gray-600 dark:text-gray-300 mb-4 line-clamp-2">
              {project.description}
            </p>
            
            <div class="flex flex-wrap gap-2 mb-4">
              {project.tags.map(tag => (
                <span class="px-2 py-1 bg-gray-100 dark:bg-gray-700 text-xs rounded-full text-gray-600 dark:text-gray-300">
                  {tag}
                </span>
              ))}
            </div>
            
            <div class="flex justify-between items-center pt-4 border-t border-gray-100 dark:border-gray-700">
              <a 
                href={project.github} 
                target="_blank" 
                rel="noopener noreferrer"
                class="text-sm font-medium text-gray-600 hover:text-blue-600 dark:text-gray-400 dark:hover:text-blue-400 transition-colors"
                onClick={e => e.stopPropagation()}
              >
                Code Source
              </a>
              <a 
                href={project.demo} 
                target="_blank" 
                rel="noopener noreferrer"
                class="text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 px-4 py-2 rounded-lg transition-colors"
                onclick={e => e.stopPropagation()}
              >
                Voir le projet
              </a>
            </div>
          </div>
        </a>
      ))}
    </div>
  </div>
</section>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>