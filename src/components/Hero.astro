---
const { title, subtitle } = Astro.props;
---

<section class="py-20 bg-gradient-to-r from-blue-600 to-indigo-800 text-white">
  <div class="container mx-auto px-4 text-center">
    <h1 class="text-5xl font-bold mb-4">{title}</h1>
    <p class="text-xl mb-8">{subtitle}</p>
    <a href="#contact" class="bg-white text-blue-600 px-8 py-3 rounded-full font-semibold shadow-lg hover:bg-blue-800 hover:text-gray-300 transition duration-300 ease-in-out">
      Me Contacter
    </a>
  </div>
</section>